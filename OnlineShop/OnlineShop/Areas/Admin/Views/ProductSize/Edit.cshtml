@model Model.EF.ProductSize

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdminUpdate.cshtml";
}

@section Title{
    Sửa Size    
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
